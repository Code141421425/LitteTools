<TargetPanel>
    orientation:"vertical"

    Label:
        text:"Move Target Path"
        size_hint_y:1

    RecycleView:
        data:root.data_for_loadConfigList
        viewclass:'RecycleViewUnit'
        size_hint_y:9
        RecycleBoxLayout:
            default_size:None,dp(30)
            default_size_hint:1,None
            size_hint_y:None
            height:self.minimum_height
            orientation:"vertical"
            spacing:dp(2)

    AddNewPath

<RecycleViewUnit>
    BoxLayout:
        Label:
            text:root.posTitle
            size_hint_x:.7

        Button:
            text:"Move File"
            size_hint_x:.3
            on_release:app.on_button_MoveFile(root)


<AddNewPath>
    BoxLayout:
        orientation:'horizontal'

    BoxLayout:
        orientation:"vertical"
        size_hint_x:9

        BoxLayout:
            orientation:"horizontal"
            
            Label:
                text:"Key"
                size_hint_x:2
            TextInput:            
                text:root.keyInputStr
                size_hint_x:8
                id:input_key
        
        BoxLayout:         
            orientation:"horizontal"            

            Label:
                text:"Value"
                size_hint_x:2
            TextInput:
                text:root.pathInputStr
                id:input_path
                size_hint_x:8




    Button:
        text:"+"
        size_hint_x:1
        on_release:app.on_button_AddNewPath(root)
